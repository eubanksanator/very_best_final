<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Favorite #<%= @favorite.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Notes</dt>
              <dd><%= @favorite.notes %></dd>

              <dt>User</dt>
              <dd><%= @favorite.user.username %></dd>

              <dt>Dish</dt>
              <dd><%= @favorite.dish.name %></dd>

              <dt>Venue</dt>
              <dd><%= @favorite.venue.name %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), favorites_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_favorite_path(@favorite), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @favorite, method: :delete, data: { confirm: "Do you really want to delete this favorite?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
